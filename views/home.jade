          .card-header
            .row
              .col-2
                img.d-block.rounded-circle.img-fluid(src='https://randomuser.me/api/portraits/men/74.jpg')
              .col.d-flex.align-items-center.pl-0
                h5.card-title @{{ mark.owner }}
          .card-body
            p.card-text {{ mark.body }}
          .card-footer.text-muted
            .row(style='font-size:0.8rem')
              .col-5
                p.mb-0.text-muted {{ mark.createdAt }}
